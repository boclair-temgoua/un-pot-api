  "scripts": {
    "prepare": "husky install",
    "ngrok": "ngrok http http://localhost:3000",
    "husky:add-hook-commit-msg": "npx husky add .husky/commit-msg 'npx --no-install commitlint --edit \"$1\"'",
    "husky:add-hook-pre-commit": "npx husky add .husky/pre-commit 'npm run pre-commit'",
    "husky:add-hook-pre-push": "npx husky add .husky/pre-push 'npm run pre-push'",
    "pre-commit": "lint-staged && git remote prune origin",
    "postinstall": "npm run prepare",
    "lint": "eslint --max-warnings 0 --ext .js,ts src",
    "lint-prettier": "prettier --config .prettierrc --list-different '{src,test}/**/*.{ts,js,css,scss}'",
    "prettier": "prettier --config .prettierrc --write '{src,test}/**/*.{ts,js,css,scss}'",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:listener": "nest start --watch --config listener.json",
    "docker:dev:start": "docker-compose --file docker-compose.yml --compatibility up --no-recreate",
    "docker:dev:rebuild": "docker-compose --file docker-compose.yml --compatibility up --build",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/app/databases/config/orm-config.ts",
    "typeorm:seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/app/databases/config/orm-config-seed.ts",
    "typeorm:genrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/app/databases/config/orm-config.ts",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:generate": "npm run typeorm:genrate migration:generate ./src/app/databases/migrations/$npm_config_name -n",
    "migration:create": "cross-var ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/app/databases/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm migration:revert",
    "seed:run": "npm run typeorm:seed -- migration:run",
    "seed:create": "cross-var ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/app/databases/seeds/$npm_config_name "
  },
